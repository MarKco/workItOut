<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Impostazioni">

  <PreferenceCategory
     android:title="Durata della giornata">

    <EditTextPreference
        android:capitalize="words"
        android:inputType="numberDecimal"
        android:key="workday_hours"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:defaultValue="8.0"
        android:maxLength="3"
        android:title="@string/prefs_choose_workday_length"
    />
     
  </PreferenceCategory>   
</PreferenceScreen>